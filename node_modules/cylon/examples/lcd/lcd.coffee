Cylon = require('../..')

Cylon.robot
  connection:
    name: 'arduino', adaptor: 'firmata', port: '/dev/ttyACM0'

  device:
    name: 'lcd', driver: 'lcd'

  work: (my) ->
    my.lcd.on 'start', ->
      #my.lcd.backlightOn()
      my.lcd.print "Hello, world!"
      
      i = 0
      after 2.seconds(), ->
      	my.lcd.clear()
      
      	every 1.second(), ->
      	  my.lcd.setCursor 0, 0
      	  my.lcd.print "#{i++}"

.start()
